<div class="post">
  <div id="title" class="title">
    <span class="ruby-keyword">def</span>
    <span class="ruby-entity"><%=h post.title.camelcase %></span>
    <span class="ruby-inherited">&lt; Post</span>
  </div>
  <div id="body" class="body indent"><%= post.body %></div>
  <div>
    <span class="ruby-keyword">end
      <% if current_user_is_an_admin? %>
        <span class="controls">
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Back', posts_path %>
        </span>
      <% end %>
    </span>
  </div>
</div>